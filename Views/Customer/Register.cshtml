@model CustomerRegisterViewModel

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
            <form asp-controller="Customer" asp-action="Register" method="post">

                <div class="mt-2">
                    <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="mt-2">
                    <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="mt-2">
                    <input asp-for="UserName" class="form-control" placeholder="UserName" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="mt-2">
                    <input asp-for="Password" class="form-control" placeholder="Password" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mt-2">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" type="password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="mt-2">
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mt-2">
                    <input asp-for="Address" class="form-control" placeholder="Address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="mt-2">
                    <input asp-for="Suburb" class="form-control" placeholder="Suburb" />
                    <span asp-validation-for="Suburb" class="text-danger"></span>
                </div>

                <div class="mt-2">
                    <select asp-for="State" asp-items="@Html.GetEnumSelectList(typeof(TAFE2018GrandeGiftFinal.Models.StateSelectEnum))"></select>
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>

                <div class="mt-2">
                    <input asp-for="Postcode" class="form-control" placeholder="Postcode" />
                    <span asp-validation-for="Postcode" class="text-danger"></span>
                </div>

                <div class="mt-2">
                    <input type="submit" value="Save" class="btn btn-info" />
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>