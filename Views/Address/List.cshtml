@model AddressListViewModel

<h2>Number of Categories: @Model.Total</h2>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <div class="row justify-content-center my-3">
                <a asp-action="Create" class="btn btn-primary">Add Address</a>
            </div>
            <div class="table-responsive-md">
                <table class="table table-striped table-bordered table-sm">
                    <thead class="thead-dark">
                        <tr>
                            <th class="text-left">ID</th>
                            <th class="text-left">Address</th>
                            <th class="text-left">Suburb</th>
                            <th class="text-left">State</th>
                            <th class="text-left">Postcode</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model.Addresses)
                    {
                        <tr>
                            <td class="text-center">@item.AddressId</td>
                            <td class="text-center">@item.HouseAddress</td>
                            <td class="text-center">@item.Suburb</td>
                            <td class="text-center">@item.State</td>
                            <td class="text-centre">@item.Postcode</td>
                            <td class="text-center">@Html.ActionLink("Update", "Update", "Category", new { id = item.AddressId })</td>
                            <td>
                                <form asp-action="Delete" asp-controller="Address" method="post">
                                    <input asp-for="AddressId" value="@item.AddressId" hidden="hidden" />
                                    <button type="submit" class="btn bg-danger">X</button>
                                </form>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>