@model AddressCreateViewModel

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
            <form asp-controller="Address" asp-action="Create" method="post">

                <input asp-for="CustomerId" hidden="hidden"/>

                <div class="mt-2">
                    <input asp-for="HouseAddress" class="form-control" placeholder="Address" />
                    <span asp-validation-for="HouseAddress" class="text-danger"></span>
                </div>

                <div class="mt-2">
                    <input asp-for="Suburb" class="form-control" placeholder="Suburb" />
                    <span asp-validation-for="Suburb" class="text-danger"></span>
                </div>

                <div class="mt-2">
                    <select asp-for="State" asp-items="@Html.GetEnumSelectList(typeof(TAFE2018GrandeGiftFinal.Models.StateSelectEnum))"></select>
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>

                <div class="mt-2">
                    <input asp-for="Postcode" class="form-control" placeholder="Postcode" />
                    <span asp-validation-for="Postcode" class="text-danger"></span>
                </div>

                <div class="mt-2">
                    <input type="submit" value="Save" class="btn btn-info" />
                </div>

            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>