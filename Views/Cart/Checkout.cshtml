@model CartCheckoutViewModel

<h3>Cart Items</h3>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h2>Finalize by selecting your address</h2>
            <div>
                <form asp-controller="Cart" asp-action="Checkout" method="post">

                    <select asp-for="AddressId" asp-items="Model.Addresses"></select>

                    <div class="mt-2">
                        <input type="submit" value="Order" class="btn btn-info" />
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>